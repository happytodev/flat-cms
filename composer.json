{
    "name": "happytodev/flat-cms",
    "description": "Content Management with flat database, using TALL Stack",
    "keywords": [
        "happytodev",
        "laravel",
        "flat-cms"
    ],
    "homepage": "https://github.com/happytodev/flat-cms",
    "license": "MIT",
    "authors": [
        {
            "name": "Frédéric Blanc",
            "email": "frederic.blanc@itanea.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.3",
        "filament/filament": "^2.0",
        "illuminate/contracts": "^9.0",
        "ryangjchandler/orbit": "^1.1",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "HappyToDev\\FlatCms\\": "src",
            "HappyToDev\\FlatCms\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HappyToDev\\FlatCms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HappyToDev\\FlatCms\\FlatCmsServiceProvider"
            ],
            "aliases": {
                "FlatCms": "HappyToDev\\FlatCms\\Facades\\FlatCms"
            }
        }
    },
    "post-update-cmd": [
        "@php artisan filament:upgrade"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
